
{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h1>Pages</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ page.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ page.contenu }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('adminPages_index') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('adminPages_edit', { 'id': page.id }) }}">
            Edit
        </a>
    </li>
     <li>
     {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
      </li>
</ul>
{% endblock %}