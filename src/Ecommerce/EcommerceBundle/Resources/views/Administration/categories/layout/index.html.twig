{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Categories list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('adminCategories_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td>{{ category.nom }}</td>
                <td>
                    <ul>
                        
                            <a href="{{ path('adminCategories_show', { 'id': category.id }) }}"><i class=" icon-eye-open"></i></a>
                        
                       
                            <a href="{{ path('adminCategories_edit', { 'id': category.id }) }}"><i class="icon-edit"></i></a>
                        
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        
            <a href="{{ path('adminCategories_new') }}"class="btn btn-primary">Créer une nouvelle catégorie</a>
       
    </ul>
{% endblock %}
